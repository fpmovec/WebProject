        $('#saveFile').click(function () {
            $.post("api/WebService",
                $("#saveFileForm").serialize(),
                function (value) {
                    $('#files').append('<li>' + '<strong>' + "Path: " + '</strong>' + value.InFilePath
                        + '<ul>' + "Archieve: " + value.InArchieveType + '</ul>'
                        + '<ul>' + "Out file type: " + value.InFileType + '</ul>'
                        + '<ul>' + "Out archieve: " + value.OutFileType + '</ul>'
                        + '<ul>' + "Out file type: " + value.OutArchieveType + '</ul>' + '</li>');
                },
                "json"
            );
