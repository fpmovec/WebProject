<div id="body">
    <ul id="files"></ul>
    <form id="saveFileForm" method="post">
        <h3>Create a new File</h3>
        <p>
            <label for="contactName">File path:</label>
            <input type="text" name="InFilePath" />
        </p>
        <p>
            <label for="contactA">Input archieve:</label>
            <input type="text" name="InArchieveType" />
        </p>
        <p>
            <label for="contactO">Input file type:</label>
            <input type="text" name="InFileType" />
        </p>
        <p>
            <label for="contactOu">Output file type:</label>
            <input type="text" name="OutFileType" />
        </p>
        <p>
            <label for="contactOa">Output archieve type:</label>
            <input type="text" name="OutArchieveType" />
        </p>
        <input type="button" id="saveFile" value="Save" />
    </form>
</div>

